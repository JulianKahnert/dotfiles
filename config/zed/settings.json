{
  // Zed settings
  //
  // For information on how to configure Zed, see the Zed//zed.dev/docs/configuring-zed
  //
  // To see all of Zed's default settings without changing your
  // custom settings, run `zed: open default settings` from the
  // command palette (cmd-shift-p / ctrl-shift-p)
  "agent_servers": {
    "claude": {
      "default_model": "sonnet"
    }
  },
  "relative_line_numbers": "enabled",
  "vim_mode": true,
  "format_on_save": "on",
  "ui_font_size": 12,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "languages": {
    "Plain Text": {
      "soft_wrap": "none",
    },
  },
}
